    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/md_grey_700</item>
        <item name="android:textColor">@drawable/editext_selector</item>
        <item name="actionMenuTextColor">@color/md_white_1000</item>
        <item name="android:actionMenuTextColor">@color/md_white_1000</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
